<Window x:Class="WpfTaskManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaskManagerApp"
        xmlns:viewModels="clr-namespace:WpfTaskManagerApp.ViewModels"
        xmlns:views="clr-namespace:WpfTaskManagerApp.Views" 
        mc:Ignorable="d"
        Title="Task Manager App" Height="768" Width="1366" 
        WindowStartupLocation="CenterScreen"
        Background="#F4F7FC">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Button" x:Key="NavButtonStyle">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#5A6A7A"/>
                <Setter Property="BorderThickness" Value="0,0,0,3"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Padding" Value="18,12"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#007ACC"/>
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="Foreground" Value="#A0AEC0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="ProfileNavButtonStyle" BasedOn="{StaticResource NavButtonStyle}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsProfileViewActive}" Value="True">
                        <Setter Property="Foreground" Value="#007ACC"/>
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="StaffNavButtonStyle" BasedOn="{StaticResource NavButtonStyle}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsStaffManagementViewActive}" Value="True">
                        <Setter Property="Foreground" Value="#007ACC"/>
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="TaskNavButtonStyle" BasedOn="{StaticResource NavButtonStyle}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsTaskManagementViewActive}" Value="True">
                        <Setter Property="Foreground" Value="#007ACC"/>
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="LogoutButtonStyle">
                <Setter Property="Background" Value="#E53935"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#C62828"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="TextBlock" x:Key="UserInfoNavbarStyle">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="15,0,5,0"/>
                <Setter Property="Foreground" Value="#4A5568"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#DEE2E6" Padding="15,5">
            <DockPanel>
                <TextBlock Text="Task Manager Pro" 
                           VerticalAlignment="Center" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#005A9E" 
                           Margin="10,0,40,0"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Content="Profile" 
                            Command="{Binding NavigateToProfileCommand}" 
                            Style="{StaticResource ProfileNavButtonStyle}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Button Content="Staff Management" 
                            Command="{Binding NavigateToStaffManagementCommand}" 
                            Style="{StaticResource StaffNavButtonStyle}"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Button Content="Task Management" 
                            Command="{Binding NavigateToTaskManagementCommand}" 
                            Style="{StaticResource TaskNavButtonStyle}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource UserInfoNavbarStyle}"
                               Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Run Text="Welcome,"/>
                        <Run Text="{Binding CurrentUser.FullName, FallbackValue='User'}" FontWeight="SemiBold"/>
                        <Run Text="("/>
                        <Run Text="{Binding CurrentUser.Role, FallbackValue='Role'}" FontStyle="Italic"/>
                        <Run Text=")"/>
                    </TextBlock>

                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}" 
                            Style="{StaticResource LogoutButtonStyle}"
                            Margin="15,0,10,0"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentViewModel}" 
                        Margin="20"/>

    </Grid>
</Window>
